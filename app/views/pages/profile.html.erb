
<div class="row">
      <div class="col-xs-3">
	      <div class="col-sm-12" style="margin-top: -200px;">
	            <img src="/avatar.jpg" height="200px" width="200px" class="rounded-img">
	      </div>
	      <div class="col-sm-12">
			  <h3 style="font-weight: bold;"><%= params[:id] %></h3>
			  <p>
			  	This is Twitter Clone, a tutorial based Project on Ruby On Rails. Please check my other projects and code on the GitHub <a href="https://github.com/vishapps">github.com/vishapps</a>
			  </p>
	      </div>
      </div>
<div class="col-xs-6">
	<%= render '/components/post_form' %><br><br>
	
		<% for @p in @posts %>
    	<div class="panel panel-default post-panel">
          <div class="panel-body row">
            
	          	<div class="col-sm-1">
	              <img src="/avatar.jpg" class="rounded-img" height="50px" width="50px"></img>
	            </div>
	            <div class="col-sm-11">
	              <p class="post-title"><span class="post-owner"><%= User.find(@p.user_id).username %></span>
	  									<span class="post-creation">- <%= @p.created_at.to_formatted_s(:short) %></span>
	  			  </p>
	              <p class="post-content"><%= @p.content %></p>
	            </div>
	            
	            <div class="col-sm-12">
	              <p class="post-links">
	                <span class="glyphicon glyphicon-comment g-links" aria-hidden="true"></span>
	                <span class="glyphicon glyphicon-retweet g-links" aria-hidden="true"></span>
	                <span class="glyphicon glyphicon-heart g-links" aria-hidden="true"></span>
	                <span class="glyphicon glyphicon-option-horizontal g-links" aria-hidden="true"></span>
	                <a href="">View conversation</a>
	              </p>
	            </div>
			</div>
		</div>
		<% end %>
		
		<div class="panel panel-default post-panel">
          <div class="panel-body row">
	            <div class="col-sm-12">
	            	<center><img src="/v.jpg" height="25px" width="25px"></img>
	            		<a href="#top"><p class="opacity: .7; color: grey;">Back to top <span class="glyphicon glyphicon-arrow-up" aria-hidden="true"></span></p></a></center>
	            </div>
			</div>
		</div>
</div>	
     <div class="col-xs-3">
      	<%= render '/components/follow_button', :user => User.find_by_username(params[:id]) %>
         <div class="panel panel-default">
           <div class="panel-body">
             <h5 style="color: grey; font-size: 125%;">Who to follow</h5>
             <% for @u in @toFollow do %>
               <p style="font-weight: bold; opacity: 0.85;" ><a href="/user/<%= @u.username %>"><%= @u.username %></a></p>
             <% end %>
           </div>
         </div>

		<div class="panel panel-default">
  			<div class="panel-body">
				<h5 style="color: grey; font-size: 125%;">Trends</h5>
	            <a href="">#Trend #1</a><br>
	            	<span style="color: grey;">51k Posts</span><br><br>
	            <a href="">#Trend #2</a><br>
	            	<span style="color: grey;">28k Posts</span><br><br>
	            <a href="">#Trend #3</a><br>
	            	<span style="color: grey;">19k Posts</span><br><br>
			</div>
		</div>
	</div>
</div>